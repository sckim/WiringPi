{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                //"readall.c",  //add source codes
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lwiringPi",
                "-lwiringPiDev",
                "-lpthread",
                "-lrt",
                "-lm",      //math lib
                "-lcrypt"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}